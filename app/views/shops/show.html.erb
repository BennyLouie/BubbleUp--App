<div class="content" style="text-align: center;">
<p style="font-size: 15px;">
  <strong>Name:</strong><%= @shop.name %>
</p>

<p style="font-size: 15px;">
  <strong>Location:</strong>
  <%= @shop.location %>
</p>

<p style="font-size: 15px;">
  <strong>Address:</strong>
  <%= @shop.address %>
</p>

<p style="font-size: 15px;">
  <strong>Average Rating:</strong>
  <%= @shop.avg_rating %>
</p>

<div class="container" style="postion:relative;">
<table class="table" style="width: 300px; float: left;">
  <thead>
    <tr class="is-selected">
      <th>Tea Menu:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @shop.teas.each do |tea| %>
    <tr>
      <td><p style="font-size: 15px;"><%= link_to tea.name, tea_path(tea) %></p></td>
    </tr>
  <% end %>
  </tbody>
</table>

<table class="table" style="width: 700px; float: right;">
  <thead>
    <tr class="is-selected">
      <th>Reviews:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @shop.shop_reviews.each do |review| %>
    <tr>
      <td><p style="font-size: 15px;"><strong>Rating: </strong><%= "#{review.rating} - #{review.review}" %></p></td>
    </tr>
  <% end %>
  </tbody>
</table>
<h1 style="font-size: 15px; postion: absolute; bottom:0;"><%= link_to 'Back', shops_path %></h1>
</div>

</div>
