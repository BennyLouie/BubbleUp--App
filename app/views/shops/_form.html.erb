<% if flash[:errors] %>
  <div id="error_explanation">
    <h2><%= pluralize(flash[:errors].count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% flash[:errors].each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @shop do |form| %>
  <div class="field">
    <%= form.label :name, class: "label"  %>
    <%= form.text_field :name, class: "input"  %>
  </div>

  <div class="field">
    <%= form.label :location, class: "label"  %>
    <%= form.text_field :location, class: "input"  %>
  </div>

  <div class="field">
    <%= form.label :address, class: "label"  %>
    <%= form.text_field :address, class: "input"  %>
  </div>

  <div class="button">
    <%= form.submit 'Submit Shop', class: "button is-primary" %>
  </div>
<% end %>
