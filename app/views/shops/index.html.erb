<p id="notice"><%= notice %></p>

<h1>Shops</h1>

<%= form_for @shops do |f| %>
  <%= f.label :location %>
  <%= f.collection_select :location Shop.locations :location :location %>
  <%= submit_tag "Search for shop" %>
<% end %>





<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.location %></td>
        <td><%= shop.address %></td>
        <td><%= link_to 'Show', shop %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shop', new_shop_path %>
<%= link_to 'Back to User', user_path(@current_user) %>
