<!DOCTYPE html>
<html>
  <head>
    <title>BubbleUp! App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% # javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  
  <body>
    <header class="menu">
      <div class="container">
        <span class="logo">
        Bubble Up!
        </span>
        <nav class="right">
          <span class="item">
            <% if logged_in? %>
              Welcome, <%= @current_user.full_name %>
              <%= button_to "Logout", "/logout", method: :delete %>
            <% else %>
              <%= link_to "Sign Up", new_user_path, class: "item" %>
              <%= link_to "Login", login_path, class: "item" %>
            <% end %>
          </span>
        </nav>
      </div>
  </header>
    <%= yield %>

  </body>
</html>
