<% if flash[:errors] %>
<ul>
    <% flash[:errors].each do |message| %>
      <li><%= message %></li>
    <% end %>
</ul>
<% end %>

<%= form_tag '/login' do %>

    <%= label_tag :username %>
    <%= text_field_tag :username %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= submit_tag 'Login'%>
<% end %>

<%= link_to 'Sign Up', new_user_path %> 