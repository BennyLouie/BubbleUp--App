<h1 class= "label" style="background-color: #011F2E; color: #fff;"><strong style="color: #fff;">My Recommendations</strong></h1>

<table class="table">
  <thead>
    <tr class="is-selected">
      <th>Tea</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @recommendations.each do |recommendation| %>
      <tr>
        <td><p style="font-size: 15px;"><%= link_to Tea.find(recommendation.tea_id).tea_with_shop, tea_path(Tea.find(recommendation.tea_id)) %></p></td>
        <td><p style="font-size: 15px;"><%= recommendation.comments %></p></td>
        <td><p style="font-size: 15px;"><%= link_to 'Edit', edit_recommendation_path(recommendation) %></p></td>
        <td><p style="font-size: 15px;"><%= link_to 'Delete Recommendation', recommendation, method: :delete, data: { confirm: 'Are you sure?' } %></p></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1 style="font-size: 15px;"><%= link_to 'Add a Recommendation', new_recommendation_path %> |
<%= link_to 'Back to User', user_path(@current_user) %></h1>
