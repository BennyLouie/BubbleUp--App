<h1 class= "label" style="background-color: #011F2E; color: #fff;"><strong style="color: #fff;">Shop Reviews</strong></h1>

<table class="table">
  <thead>
    <tr class="is-selected">
      <th>Shop</th>
      <th>Rating</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_reviews.each do |shop_review| %>
      <tr>
        <td><h1 style="font-size: 15px;"><%= link_to Shop.find(shop_review.shop_id).shop_with_location, shop_review_path(Shop.find(shop_review.shop_id)) %></h1></td>
        <td><h1 style="font-size: 15px;"><%= shop_review.rating %></h1></td>
        <td><h1 style="font-size: 15px;"><%= shop_review.review %></h1></td>
        <td><h1 style="font-size: 15px;"><%= link_to 'Edit', edit_shop_review_path(shop_review) %></h1></td>
        <td><h1 style="font-size: 15px;"><%= link_to 'Delete Review', shop_review, method: :delete, data: { confirm: 'Are you sure?' } %></h1></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1 style="font-size: 15px;"><%= link_to 'Review a Shop', new_shop_review_path %> |
<%= link_to 'Back to User', user_path(@current_user) %></h1>
