<p id="notice"><%= notice %></p>

<h1>Shop Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Shop</th>
      <th>Rating</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_reviews.each do |shop_review| %>
      <tr>
        <td><%= link_to Shop.find(shop_review.shop_id).shop_with_location, shop_review_path(Shop.find(shop_review.shop_id)) %></td>
        <td><%= shop_review.rating %></td>
        <td><%= shop_review.review %></td>
        <td><%= link_to 'Edit', edit_shop_review_path(shop_review) %></td>
        <td><%= link_to 'Delete Review', shop_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Review a Shop', new_shop_review_path %> |
<%= link_to 'Back to User', user_path(@current_user) %>
