<p id="notice"><%= notice %></p>

<h1>Shop Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Shop</th>
      <th>Rating</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shop_reviews.each do |shop_review| %>
      <tr>
        <td><%= shop_review.user_id %></td>
        <td><%= shop_review.shop_id %></td>
        <td><%= shop_review.rating %></td>
        <td><%= shop_review.review %></td>
        <td><%= link_to 'Show', shop_review %></td>
        <td><%= link_to 'Edit', edit_shop_review_path(shop_review) %></td>
        <td><%= link_to 'Destroy', shop_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shop Review', new_shop_review_path %>
