<% if flash[:errors] %>
  <div id="error_explanation">
    <h2><%= pluralize(flash[:errors].count, "error") %> prohibited this review from being saved:</h2>
    <ul>
      <% flash[:errors].each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @shop_review do |form| %>
   <div class="select is-multiple">
   <%= form.label "Shop", class: "label" %>
   <%= form.collection_select :shop_id, Shop.all, :id, :shop_with_location, prompt: true %> 
  </div>

  <div class="field">
    <%= form.label :rating, class: "label" %>
    <%= form.number_field :rating, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :review, class: "label" %>
    <%= form.text_field :review, class: "input" %>
  </div>

  <div class="button">
    <%= form.submit 'Submit Review', class: "button is-primary" %>
  </div>
<% end %>
