<%= form_for @shop_review do |form| %>
   <div class="field">
   <%= form.collection_select :shop_id, Shop.all, :id, :shop_with_location, prompt: true %> 
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating %>
  </div>

  <div class="field">
    <%= form.label :review %>
    <%= form.text_field :review %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
